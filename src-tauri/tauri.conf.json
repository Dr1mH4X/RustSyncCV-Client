{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RustSyncCV",
  "version": "../package.json",
  "identifier": "com.rustsynccv.client",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "RustSyncCV",
        "width": 360,
        "height": 240,
        "minWidth": 360,
        "minHeight": 240,
        "transparent": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "icon": ["icons/icon.png", "icons/icon.icns", "icons/icon.ico"],
    "targets": ["nsis", "appimage", "dmg"],
    "macOS": {
      "signingIdentity": null
    }
  }
}
